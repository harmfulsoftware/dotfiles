#!/bin/sh

WORDS="$HOME/Documents/words_alpha.txt"
LINES=$(wc -l < "$WORDS")

set -- $(awk -v l="$LINES" '
BEGIN {
    srand()
    f = int(rand()*l) + 1
    s = int(rand()*l) + 1
}
NR == f { w1 = $0 }
NR == s { w2 = $0 }
(w1 && w2) {
    print w1, w2
    exit
}
' "$WORDS")

VAR1=$1
VAR2=$2

set -- $(awk 'BEGIN { srand(); print int(10*rand()), int(10*rand()) }')
rand1=$1
rand2=$2

printf "%s_%s.%s%s\n" "$VAR1" "$VAR2" "$rand1" "$rand2"
